<div class="col-md-10 col-md-offset-1 toeat">
  <h2 class="uneaten-title">Patties To Consume</h2>
  <ul class="uneaten">
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          <img src="../img/krabbyPatty.png" width="100px">
          <p>
            {{this.burger_name}}
          </p>
          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit" class="btn btn-default">Devour</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
  {{!-- <img id="eatingguy" src="../img/eating.gif" width="150px"> --}}
</div>

<div class="row">
  <div class="col-md-2"></div>
    <div class="col-md-4" id="update">
        <form class="create-update-form" action="burgers/create" method="POST">
          <h2 class="add-title">Add a Patty</h2>
          <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="hidden" name="devoured" value="0">
            <input type="text" id="newBurger" name="burger_name">
          <button type="submit" class="btn btn-default">Add Burger</button>
        </form>
      </div>
    </div>

    <div class="col-md-4" id="eaten">
      <h2 class="eaten-title">Patties Eaten:</h2>
      <ul class="burgers-eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <p>
                {{this.burger_name}}
              </p>
            </li>
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
             <input type="hidden" name="devoured" value="false">
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-2"></div>
</div>
